<html>
  <head>
    <title>Onnie's Habits</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/current_projects_styles.css" rel = "stylesheet">
  </head>
  <body>


      {% include 'navbar/nav.html' %}

    <div class = "container" id = "mainContainer">
      <div class = "row row-centered" id = "mainRow">
        <div class = "col-xl-5 col-lg-5 col-md-5 col-sm-5 col-sm-offset-1 col-centered mainBody" id="habits">

          <h1>Active Habits</h1>
            {% if habits is not empty %}
            <ul>
                {% for habit in habits %}
                <li>{{ habit.getName }} <a href="/habit/habits/{{ habit.getId }}">Edit</a><a href="habits/{{ habit.getId }}/coaching">Coaching</a></li>
                <ul>{{ habit.getIntervalDays }} days (eventually want days completed)</ul>
            </ul>
            {% endfor %}

            {% else %}
            <p>No habits currently entered.</p>

            {% endif %}
            <p><a href="/habit/new_habit">Click here to enter a new habit.</a></p>
        </div>
      </div>
    </div>



  </body>
</html>
