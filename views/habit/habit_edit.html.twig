<html>
  <head>
    <title>Onnie's Habits</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/current_projects_styles.css" rel = "stylesheet">
  </head>
  <body>


      

    <h1>Edit {{ habit.getName }} habit</h1>

            <form action="/habit/habits/{{ habit.getId }}" method="post">
              <input name="_method" type="hidden" value="patch">

              <p>Current name: {{ habit.getName }}</p>
              <label for="name">Update the habit name:</label>
              <input id="name" name="name" type="text">

              <button type="submit">Update</button>


              <p>Current motivation: {{ habit.getMotivation }}</p>
              <label for="motivation">Update the habit motivation:</label>
              <input id="motivation" name="motivation" type="text">

              <button type="submit">Update</button>

              <p>Current interval days: {{ habit.getIntervalDays }}</p>
              <label for="interval_days">Update the length of this habit:</label>
              <input id="interval_days" name="interval_days" type="text">

              <button type="submit">Update</button>

            </form>

            <form action="/habit/habits/{{ habit.getId }}" method="post">
                <input name="_method" type="hidden" value = "delete">

                <button type="submit">Delete this Habit</button>
            </form>
</body>
</html>
