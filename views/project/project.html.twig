<!-- Header twig template -->

{% set vars = {
  'page_title': 'Current Projects',
  'css_url': '/css/current_projects.css'
}

%}
{% include 'partials/header.html.twig' with vars %}
    <body>

      <!-- Navbar twig template -->

      {% set active_page = '/project/current_projects' %}
      {% include 'partials/nav.html' %}

      <div class = "container" id = "mainContainer">
        <div class = "row row-centered" id = "mainRow">


          <div class = "col-xl-5 col-lg-5 col-md-5 col-sm-5 col-sm-offset-1 col-centered mainBody" id="projects">

        <h1>Project Name: {{ project.getName }}</h1>
        <ul>
            <li>Motivation: {{ project.getMotivation }} </li>
            <li>Due Date: {{ project.getDueDate }} </li>
            <li>Priority: {{ project.getPriority }} </li>
        </ul>

        {% if steps is not empty %}
            <ul>
            {% for step in steps %}
                <li>Step Description: {{ step.getDescription }}</li>
                <li>Step Project Id: {{ step.getProjectId }}</li>
                <li>Step Position: {{ step.getPosition }} </li>
            {% endfor %}
        {% else %}
            <p>No Steps currently entered</p>
        {% endif %}

      </div>

    </div>
  </div>


    </body>
</html>
