<html>
  <head>
    <title>Onnie's Projects</title>
  </head>
  <body>

    <h1>Active projects</h1>
      {% if projects is not empty %}
      <ul>
          {% for project in projects %}
          <li><a href="/projects/{{ project.getId }}">{{ project.getName }}</a></li>
      </ul>
      {% endfor %}

      {% else %}
      <p>No projects currently entered.</p>
      <p><a href="/new_project">Click here to enter a new project.</a></p>
      {% endif %}



  </body>
</html>
