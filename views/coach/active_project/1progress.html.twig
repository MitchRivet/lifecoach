<!-- Header twig template -->

{% set vars = {
  'page_title': "MindSet :: #{project.getName}",
  'css_url': '/css/new_project.css'
}

%}

{% include 'partials/header.html.twig' with vars %}


    <body>

        <!-- Nabar twig template -->

        {% set active_page = '/coach/active_project' %}
        {% include 'partials/nav.html' %}

        <div class = "container" id = "mainContainer">

            <div class = "row row-centered" id = "mainRow">

                <div class = "col-xl-8 col-lg-8 col-md-11 col-sm-12 col-sm-offset-1 col-centered mainBody">

                    <h1>Hi! I'm glad you have time to work on something.</h1>

                    <p>Your motivation for this project is
                        <strong>{{ project.getMotivation }}</strong>.
                    </p>

                    <p>You're doing great so far.
                        {{ project.getSteps|length - project.getIncompleteSteps|length }}
                        of {{ project.getSteps|length }} steps are complete!
                    </p>

                    {% include 'coach/partials/project_progress_bar.html.twig' %}

                    <p>Your project is due on {{ project.getDueDate|date("l, F dS, Y") }}.</p>

                    <a href='/coach/active_project/{{ project.getId }}/next_step' role="button" class="btn btn-default">
                        I'm ready to get started!
                    </a>

                </div>

            </div>

            <!-- <div class = "col-xl-5 col-lg-5 col-md-5 col-sm-5 col-sm-offset-1 col-centered mainBody"> -->


            <!-- </div> -->

        </div>
    </body>
</html>
