<!-- Header twig template -->

{% set vars = {
  'page_title': 'New Project',
  'css_url': '/css/new_project.css'
}

%}

{% include 'partials/header.html.twig' with vars %}


    <body>

      <!-- Nabar twig template -->

      {% set active_page = '/coach/current_projects' %}
      {% include 'partials/nav.html' %}

        <div class = "container" id = "mainContainer">

            <div class = "row row-centered" id = "mainRow">

                <div class = "col-xl-8 col-lg-8 col-md-11 col-sm-12 col-sm-offset-1 col-centered mainBody">

                    <h1>Your next step on this project is:</h1>

                    <h4>{{ next_step.getPosition }}. {{ next_step.getDescription }}</h4>

                    <p>
                        Are you confident that you can complete this step today?
                    </p>
                    <a href="/coach/active_project/{{ project.getId }}/complete" role="button" class="btn btn-default">Yep!</a>
                    <a href="/coach/active_project/{{ project.getId }}/reorder_steps" role="button" class="btn btn-default">Not totally...</a>

                </div>
            </div>
        </div>
    </body>
</html>
