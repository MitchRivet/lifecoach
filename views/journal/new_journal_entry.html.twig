<html>
    <head>
        <title>Onnie's Journal</title>
    </head>

    <body>
        <h1>{{ date }}</h1>

        {% if existing_entry is not empty %}
            {{ existing_entry }}
        {% endif %}


        <form action='/save_journal_entry' method='post'>
              <label for = 'entry'>Today's entry</label>
              <input id = 'entry' name='entry' type='text'>

              <button type='submit'>Submit</button>
          </form>

    </body>
</html>
